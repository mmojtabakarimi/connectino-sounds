case "$1" in
    build)
      cp fa_FA.tar.gz /tmp/
        ;;

    package)
        ;;

    install)
        tar -xvf /tmp/fa_FA.tar.gz  -C /usr/share/asterisk/sounds/
        rm -rf /tmp/fa_FA.tar.gz
        ;;

    uninstall)
    rm -rf  /usr/share/asterisk/sounds/fa_FA
        ;;

    *)
        echo "$0 called with unknown argument '$1'" >&2
        exit 1
    ;;
esac
