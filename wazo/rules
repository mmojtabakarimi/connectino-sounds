case "$1" in
    build)
        ;;

    package)
        ;;

    install)
      mkdir -p /usr/share/asterisk/sounds/fa_FA
      tar -xvf fa_FA.tar.gz -C /usr/share/asterisk/sounds/fa_FA/
        ;;

    uninstall)
        ;;

    *)
        echo "$0 called with unknown argument '$1'" >&2
        exit 1
    ;;
esac
